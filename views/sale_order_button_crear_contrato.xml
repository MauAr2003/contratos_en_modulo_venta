<odoo>
  <data>
    <record id="view_order_form_inherit_crear_contrato" model="ir.ui.view">
      <field name="name">sale.order.form.inherit.crear.contrato</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_crear_contrato"
                  type="object"
                  string="Crear Contrato"
                  class="btn-primary"
                  invisible="0"
                  modifiers="{'invisible': [('show_crear_contrato_button', '=', False)]}"/>
        </xpath>

        <xpath expr="//sheet/group" position="inside">
          <field name="show_crear_contrato_button" invisible="1"/>
        </xpath>

        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="contrato_id" readonly="1" string="Contrato"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
